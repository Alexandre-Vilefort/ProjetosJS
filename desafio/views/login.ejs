    <div class="container">
        <article class="card-body col-sm-4">
            <h4 class="card-title text-center mb-4 mt-1">Log in</h4>
            <hr>
            <p class="text-danger text-center">
                <%if (messages.error) {%>
                    <%= messages.error %>
                        <%} %>
            </p>
            <form action="/login" method="POST">
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fas fa-at"></i> </span>
                        </div>
                        <input class="form-control" placeholder="Email" type="email" id="email" name="email" required
                            autocomplete="on">
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text"> <i class="fa fa-lock"></i> </span>
                        </div>
                        <input class="form-control" placeholder="******" type="password" id="password" name="password"
                            required autocomplete="off">
                    </div> <!-- input-group.// -->
                </div> <!-- form-group// -->
                <div class="form-group">
                    <button type="submit" class="btn btn-dark btn-block"> Login </button>
                </div> <!-- form-group// -->
                <p class="text-center"><a href="/register" class="btn btn-outline-primary">Cadastra-se</a></p>
            </form>
        </article>
    </div>
